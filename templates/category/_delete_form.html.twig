<form method="post" action="{{ path('category_delete', {'id': category.id}) }}"
      onsubmit="return confirm('' +
       'Vous allez supprimer une catégorie.\n' +
       'Toutes les sous-catégories assocoiées seront supprimées.\n' +
        'Souhaitez-vous continuer ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i> Supprimer</button>
</form>
