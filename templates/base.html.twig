<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ asset('build/images/logoonly.png') }}"/>
		<title>
			{% block title %}OPENDEGUST{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block navbar %}
		{% include "_navbar.html.twig" %}
			{% for category, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ category }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
		{% endblock %}
		{% block body %}
		{% endblock %}
		{% block footer %}
		{% include '_footer.html.twig' %}
		{% endblock %}
	</body>
</html>
