{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>RegistrationAt</th>
                <th>Civility</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>IsVerified</th>
                <th>Birthdate</th>
                <th>KnowUs</th>
                <th>Gtc18</th>
                <th>Favory</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.roles ? customer.roles|json_encode : '' }}</td>
                <td>{{ customer.password }}</td>
                <td>{{ customer.registrationAt ? customer.registrationAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ customer.civility }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ customer.birthdate ? customer.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ customer.knowUs ? customer.knowUs|json_encode : '' }}</td>
                <td>{{ customer.gtc18 ? 'Yes' : 'No' }}</td>
                <td>{{ customer.favory ? customer.favory|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}
