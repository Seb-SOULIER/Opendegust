{% macro make_categories(categories) %}
        {% set key = 0 %}
        {% for category in categories %}

            <li class="list-group-item pl-4">
                <input type="checkbox" name="categories[]" id="category_{{ category.id }}" value="{{ category.id }}">
                <label for="category_{{ category.id }}">{{ category.name }}</label>
                {% if (category.categories|length) %}
                    <ul class="list-group flex-column d-inline-block sub-submenu" style="overflow: auto">
                        <span class="arrow" style="top:114px;"></span>
                        {% set key = key + 1 %}
                        {{ _self.make_categories(category.categories) }}
                    </ul>

                {% endif %}
            </li>

        {% endfor %}
{% endmacro %}
