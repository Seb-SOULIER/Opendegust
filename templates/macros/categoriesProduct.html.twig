{% macro make_categories(categories, categoryProduct) %}
    <ul class="list-unstyled ps-2">
        {% for category in categories %}
            <li>
                {% if (category.categories|length) %}
                    <h4> {{ category.name }} </h4>
                    {{ _self.make_categories(category.categories, categoryProduct) }}
                {% else %}
                    <input type="radio" name="categories[]" id="category_{{ category.id }}" value="{{ category.id }}" required
                        {% if (categoryProduct is not null) %}
                            {% if category.id == categoryProduct.id %} checked {% endif %}>
                        {% endif %}
                    <label for="category_{{ category.id }}">{{ category.name }}</label>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}
