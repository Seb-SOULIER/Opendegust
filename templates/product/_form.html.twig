
{{ form_start(form, {'attr': {'class': 'col-10'}}) }}
<div class="form-control container">
    <div class="d-flex row">
        <div class="col-sm">
            {{ form_label(form.name, 'Nom du produit :') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(form.description, 'Description du produit :') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(form.price, 'Prix du produit :') }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(form.imgProduct, 'Importer une image :') }}
            {{ form_widget(form.imgProduct, {'attr': {'class': 'form-control'}}) }}
            <div style="max-height: 150px; max-width: 100px;">
            <img style="height: 100%; width:100%;" src="{{ asset('uploads/') }}{{ product.picture }}" alt="{{ product.name }}">
            </div>
        </div>
        <div class="col-sm">
            {% from 'macros/categoriesProduct.html.twig' import make_categories %}
            {{ make_categories(categoriesDrink, categoryProduct) }}
            {{ make_categories(categoriesFood, categoryProduct) }}
        </div>
    </div>
</div>

<div class="d-flex justify-content-center">
<button class="btn btn-success m-3">{{ button_label|default('Ajouter') }}</button>
    </div>
{{ form_end(form) }}
