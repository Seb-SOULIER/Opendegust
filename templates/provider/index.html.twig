{% extends 'base.html.twig' %}

{% block title %}Hello ProviderController!
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="text-center mb-4">Nos producteurs</h1>
        <div class="row provider-list g-4 mb-4">
			{% for provider in providers %}
				{% if provider.lastname and provider.firstname %}
				<div class="col-sm-6 mb-3 ">
					<div class="card h-100 shadow p-3">
						<div class="row g-0 providers">
							<div class="col-md-5">
								{% if provider.picture %}
								<img class="picture-of-provider img-fluid rounded-start" src="{{ provider.picture }}"
									 alt="" style="max-height: 150px">
								{% endif %}
								<h5 class="card-title text-center">{{ provider.lastname }}
									{{ provider.firstname }}</h5>

							</div>
							<div class="col-md-7">
								<div class="carte-identite-provider-text">
									{% if provider.company %}
									<h5 class="card-title">{{ provider.company }}</h5>
									{% endif %}
									{% if provider.description %}
									<p class="card-text">{{ provider.description }}</p>
									{% endif %}
									{% if provider.contact.website %}
									<p class="card-text">
										<small class="text-muted">{{ provider.contact.website }}</small>
									</p>
									{% endif %}
									<a href="{{ path('provider_show', {'id': provider.id}) }}">Voir</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				{% endif %}
            {% endfor %}
		</div>
	</div>
{% endblock %}
