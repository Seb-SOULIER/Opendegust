{% extends 'base.html.twig' %}

{% block title %}Hello ProviderController!
{% endblock %}

{% block body %}
		<div class="container">
        <div class="row provider-list">
			{% for provider in providers %}
				<div class="card col-sm-5 p-3 m-3 ">
					<div class="row g-0 providers">
						<div class="col-md-4">

							<img class="picture-of-provider" src="http://joseph-godian.fr/wp-content/uploads/2012/02/DSC_1668-format-cv.jpg" class="img-fluid rounded-start" alt="...">
                            <h5 class="card-title">{{ provider.lastname }}
														{{ provider.firstname }}</h5>

						</div>
						<div class="col-md-8">
							<div class="carte-identite-provider-text">
								<h5 class="card-title">{{ provider.company }}</h5>
								<p class="card-text">{{ provider.description }}</p>
								<p class="card-text">
									<small class="text-muted">{{ provider.contact.website }}</small>
								</p>
								<a href="{{ path('provider_show', {'id': provider.id}) }}">Voir</a>
							</div>
						</div>
					</div>
				</div>
                {% endfor %}
		</div>
    </div>
{% endblock %}
