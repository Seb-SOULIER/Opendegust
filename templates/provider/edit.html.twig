{% extends 'base.html.twig' %}

{% block title %}Edit Provider{% endblock %}

{% block body %}
<div class="d-flex align-items-center flex-column">
    <h1 class="my-3">Informations du compte</h1>
    <div class="col-11 col-sm-9 col-md-8 col-lg-6 col-xl-6">
        {{ form_start(form, {'attr': {'class': 'd-flex align-items-center flex-column'}}) }}
            <div class="form-control py-3">
                <div class="row g-3 d-md-flex justify-content-between">
                    <div class="col-md-6">
                        <div class="text-danger">
                            {{ form_errors(form.email.first) }}
                        </div>
                        {{ form_label(form.email.first) }}
                        {{ form_widget(form.email.first) }}
                    </div>
                    <div class="col-md-6">
                        <div class="text-danger">
                            {{ form_errors(form.email.second) }}
                        </div>
                        {{ form_label(form.email.second) }}
                        {{ form_widget(form.email.second) }}
                    </div>
                </div>
                <div class="row g-3 d-md-flex justify-content-between">
                    <div class="col-md-6">
                        <div class="text-danger">
                            {{ form_errors(form.password.first) }}
                        </div>
                        {{ form_label(form.password.first) }}
                        {{ form_widget(form.password.first) }}
                    </div>
                    <div class="col-md-6">
                        <div class="text-danger">
                            {{ form_errors(form.password.second) }}
                        </div>
                        {{ form_label(form.password.second) }}
                        {{ form_widget(form.password.second) }}
                    </div>
                </div>
                <div class="col-md-6">
                    {{ form_label(form.civility, 'Sexe') }}
                    {{ form_widget(form.civility, {'attr': {'class': 'form-select'}}) }}
                </div>
                <div class="row g-3 d-md-flex justify-content-between">
                    <div class="col-md-6">
                        {{ form_label(form.lastname, 'Nom de famille') }}
                        <div class="text-danger">
                            {{ form_errors(form.lastname) }}
                        </div>
                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.lastname, 'Prénom') }}
                        <div class="text-danger">
                            {{ form_errors(form.firstname) }}
                        </div>
                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                {{ form_label(form.company, "Nom de l'entreprise") }}
                <div class="text-danger">
                    {{ form_errors(form.company) }}
                </div>
                {{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
                {{ form_label(form.picture, 'Ajouter une image') }}
                {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
                <div class="row g-3 d-md-flex justify-content-between">
                    <div class="col-md-6">
                        {{ form_label(form.socialReason, 'Raison sociale') }}
                        {{ form_widget(form.socialReason, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.siret, 'Numéro SIRET') }}
                        <div class="text-danger">
                            {{ form_errors(form.siret) }}
                        </div>
                        {{ form_widget(form.siret, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    {{ form_label(form.vatNumber, 'Numéro de TVA') }}
                    {{ form_widget(form.vatNumber, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="d-md-flex justify-content-center">
                    <div class="col-md-8">
                    {{ form_label(form.otherSite, "Déjà inscrit sur d'autres sites?") }}
                    {% for other_site in form.otherSite %}
                            {{ form_errors(other_site) }}
                            {{ form_widget(other_site, {'attr': {'class': 'form-control'}}) }}
                    {% endfor %}
                    </div>
                </div>
                {{ form_label(form.knowUs, 'Comment nous avez-vous connu?') }}
                {{ form_errors(form.knowUs) }}
                {{ form_widget(form.knowUs, {'attr': {'class': 'form-select'}}) }}

                {{ form_label(form.contact.address, 'Adresse') }}
                <div class="text-danger">
                    {{ form_errors(form.contact.address) }}
                </div>
                {{ form_widget(form.contact.address, {'attr': {'class': 'form-control'}}) }}
                <div class="row g-3 d-md-flex justify-content-between">
                    <div class="col-md-4">
                        {{ form_label(form.contact.zipCode, 'Code postal') }}
                        <div class="text-danger">
                            {{ form_errors(form.contact.zipCode) }}
                        </div>
                        {{ form_widget(form.contact.zipCode, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_label(form.contact.city, 'Ville') }}
                        <div class="text-danger">
                            {{ form_errors(form.contact.city) }}
                        </div>
                        {{ form_widget(form.contact.city, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="row g-3 d-md-flex justify-content-between">
                    <div class="col-md-6">
                        {{ form_label(form.contact.phone, 'Téléphone 1') }}
                        <div class="text-danger">
                            {{ form_errors(form.contact.phone) }}
                        </div>
                        {{ form_widget(form.contact.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.contact.phone2, 'Téléphone 2') }}
                        <div class="text-danger">
                            {{ form_errors(form.contact.phone2) }}
                        </div>
                        {{ form_widget(form.contact.phone2, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    {{ form_label(form.contact.website, 'Site internet') }}
                    <div class="text-danger">
                        {{ form_errors(form.contact.website) }}
                    </div>
                    {{ form_widget(form.contact.website, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <button class="btn btn-primary mt-3 col-12 col-md-6 text-light">{{ button_label|default('Valider') }}</button>
        {{ form_end(form) }}
        <div class="d-flex justify-content-between my-3">
            <a href="{{ path('home') }}">Retour à l'accueil</a>
            {{ include('provider/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% block footer %}
{% endblock %}
{% endblock %}
