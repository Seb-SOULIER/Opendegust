{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="d-flex align-items-center flex-column">
        <h1 class="my-3">Inscription</h1>
        <div class="col-11 col-sm-9 col-md-6 col-lg-4 col-xl-3">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(registrationForm) }}
            <div class="form-control">
                <div class="text-danger">
                    {{ form_errors(registrationForm.email.first) }}
                </div>
                {{ form_label(registrationForm.email.first) }}
                {{ form_widget(registrationForm.email.first) }}
                <div class="text-danger">
                    {{ form_errors(registrationForm.email.second) }}
                </div>
                {{ form_label(registrationForm.email.second) }}
                {{ form_widget(registrationForm.email.second) }}

                <div class="text-danger">
                    {{ form_errors(registrationForm.password.first) }}
                </div>
                {{ form_label(registrationForm.password.first) }}
                {{ form_widget(registrationForm.password.first) }}
                <div class="text-danger">
                    {{ form_errors(registrationForm.password.second) }}
                </div>
                {{ form_label(registrationForm.password.second) }}
                {{ form_widget(registrationForm.password.second) }}

                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-label'}}) }}
            </div>

            <button type="submit" class="btn btn-primary mt-3 col-12">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}
